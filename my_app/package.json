{
  "name": "intelliclinix-frontend",
  "version": "0.1.0",
  "private": true,

  "main": "electron/main.js",

  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",

    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },

  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "next": "^14.2.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-zoom-pan-pinch": "^3.7.0",
    "tailwind-merge": "^2.0.0"
  },

  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",

    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "14.0.4",

    "tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",

    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.intelliclinix.app",
    "productName": "Intelliclinix",

    "asar": true,

    "files": [
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "electron/**/*"
    ],

    "win": {
      "target": "nsis"
    }
  }
}
